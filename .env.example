# =================================================================================
# Blog System Environment Variables Configuration Template
# Copy this file to .env and modify the configuration values
# Or use scripts/deploy.sh or scripts/deploy.ps1 for interactive configuration
# =================================================================================

# ============================================
# Database Configuration
# ============================================
DB_NAME=go_blog
DB_USER=root
DB_PASSWORD=your_password_here
DB_HOST=127.0.0.1
DB_PORT=3306

# ============================================
# Admin Account Configuration
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
ADMIN_NICKNAME=Admin
ADMIN_EMAIL=admin@example.com

# ============================================
# Website Configuration
# ============================================
SITE_NAME=Blog System
SITE_TITLE=Blog System
SITE_SUBTITLE=Share programming insights
SITE_DESC=Share programming insights and technical growth
SITE_KEYWORDS=Go, Vue, Cloud Native
SITE_COPYRIGHT=© 2024 Blog System

# ============================================
# Production Environment Configuration
# ============================================
# Frontend domain (production environment)
FRONTEND_DOMAIN=https://blog.example.com
# Backend API domain (production environment)
BACKEND_DOMAIN=https://api.example.com
# Deploy environment: development or production
DEPLOY_ENV=development

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-jwt-secret-key-min-32-chars-change-in-production

# ============================================
# OAuth Configuration (Optional)
# ============================================
OAUTH_FRONTEND_URL=http://localhost:5173
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=1
